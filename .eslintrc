{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true,
    "es2017": true
  },
  "plugins": ["no-boolean-pattern-matching"],
  "rules": {
    "no-boolean-pattern-matching/no-boolean-pattern-matching": "error"
  }
}
